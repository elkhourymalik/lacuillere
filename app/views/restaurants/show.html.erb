<div class="bg-lighter-grey padded">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="box">
          <div class="card_resto min_200">
            <h2 class="resto_name"><%= @restaurant.name %></h2>
            <p class="resto_category"><%= @restaurant.category %></p>
            <p class="resto_address"><%= @restaurant.address %></p>
            <p class="resto_phone_number"><%= @restaurant.phone_number %></p>
          </div>
          <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
          <% @restaurant.reviews.each do |review| %>
            <div class="card_white">
              <p><%= review.content %></p>
              <p><%= review.rating %></p>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
